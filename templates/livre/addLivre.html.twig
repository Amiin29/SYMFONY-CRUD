{% extends 'base.html.twig' %}

{% block title %}Add livre


{% endblock %}
{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}

		form {

			margin-top: 100px;
		}
		button[type="submit"] {
			padding: 10px;
			margin-top: 50px;
			width: 50;
		}
	</style>

	<div class="example-wrapper">
        <h2>Ajouter Livre</h2>
		{{ form_start(form) }}

		{{ form_row(form.nomLivre) }}
		{{ form_row(form.auteurLivre) }}
		{{ form_row(form.reference) }}
        {{ form_row(form.ouvrage) }}
        {{ form_row(form.anneePublication) }}
		<button type="submit" class="btn btn-primary">Ajouter</button>

		{{ form_end(form) }}
	</div>

{% endblock %}
